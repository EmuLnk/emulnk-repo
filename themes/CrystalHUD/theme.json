  },
  "hideOverlay": false,
  "settings": [
    {
      "id": "show_dvs",
      "label": "Show DVs",
      "type": "toggle",
      "default": "true"
    },
    {
      "id": "show_stat_exp",
      "label": "Show Stat Exp",
      "type": "toggle",
      "default": "true"
    },
    {
      "id": "show_moves",
      "label": "Show Moves",
      "type": "toggle",
      "default": "true"
    }
  ]
}
