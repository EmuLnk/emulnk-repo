{
  "id": "CrystalHUD",
  "targetProfileId": "PMC",
  "targetConsole": "GBC",
  "meta": {
    "name": "Crystal Companion",
    "author": "EmuLnk Team",
    "version": "1.0.0",
    "description": "Dual-mode companion for Pokemon Crystal. Shows hidden DVs, Stat Exp, and Hidden Power in the overworld; reveals enemy HP, moves, and types during battle.",
